{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "channel": "preview",
      "developmentClient": false,
      "distribution": "internal",
      "android": { "buildType": "apk" }
    },
    "production": {
      "channel": "production",
      "developmentClient": false,
      "distribution": "store",
      "autoIncrement": true,
      "android": { "buildType": "app-bundle" }
    },
    "production-apk": {
      "channel": "production",
      "developmentClient": false,
      "distribution": "internal",
      "android": { "buildType": "apk" }
    }
  },
  "submit": {
    "production": {}
  }
}
